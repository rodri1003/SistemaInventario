@model SistemaInventario.Models.Product

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />

    <!-- Nombre -->
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Precio de Compra -->
    <div class="form-group">
        <label asp-for="PurchasePrice" class="control-label"></label>
        <input asp-for="PurchasePrice" class="form-control" />
        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
    </div>

    <!-- Precio de Venta -->
    <div class="form-group">
        <label asp-for="SalePrice" class="control-label"></label>
        <input asp-for="SalePrice" class="form-control" />
        <span asp-validation-for="SalePrice" class="text-danger"></span>
    </div>

    <!-- Fecha de Registro -->
    <div class="form-group">
        <label asp-for="RegistrationDate" class="control-label"></label>
        <input asp-for="RegistrationDate" class="form-control" />
        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
    </div>

    <!-- Cantidad -->
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Categoría -->
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(ViewData["CategoryList"] as SelectList)"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <input type="submit" value="Guardar" class="btn btn-primary" />
</form>

<div class="mt-2">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
