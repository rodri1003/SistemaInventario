@model SistemaInventario.Models.Invoice
@{
    ViewData["Title"] = "Detalle de Factura";
    var svCulture = System.Globalization.CultureInfo.CreateSpecificCulture("es-SV");
}

<h1 class="mb-4">Detalle de Factura</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Factura #@Model.InvoiceId</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Fecha</dt>
            <dd class="col-sm-8">@Model.Date.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.Client?.Name ?? "Invitado / N/A"</dd>

            <dt class="col-sm-4">Total Facturado</dt>
            <dd class="col-sm-8">@Model.TotalAmount.ToString("C", svCulture)</dd>

            <dt class="col-sm-4">Ganancia Neta</dt>
            <dd class="col-sm-8">@Model.NetProfit.ToString("C", svCulture)</dd>

            <dt class="col-sm-4">Descuento Global</dt>
            <dd class="col-sm-8">@Model.GlobalDiscountPercentage %</dd>

            <dt class="col-sm-4">Estado de Pago</dt>
            <dd class="col-sm-8">
                @if (Model.IsPaid)
                {
                    <span class="badge bg-success px-2 py-1">Pagada</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark px-2 py-1">Pendiente</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</div>
