@model SistemaInventario.Models.Invoice

@{
    ViewData["Title"] = "Editar Factura";
}

<h1 class="mb-4">Editar Factura</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceId" />

            <!-- Cliente -->
            <div class="mb-3">
                <label asp-for="ClientId" class="form-label">Cliente</label>
                <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clientes">
                    <option value="">-- Seleccionar --</option>
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <!-- Fecha -->
            <div class="mb-3">
                <label asp-for="Date" class="form-label">Fecha</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Total -->
            <div class="mb-3">
                <label asp-for="TotalAmount" class="form-label">Total</label>
                <input asp-for="TotalAmount" class="form-control" readonly />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <!-- Ganancia Neta -->
            <div class="mb-3">
                <label asp-for="NetProfit" class="form-label">Ganancia Neta</label>
                <input asp-for="NetProfit" class="form-control" readonly />
                <span asp-validation-for="NetProfit" class="text-danger"></span>
            </div>

            <!-- Descuento Global -->
            <div class="mb-3">
                <label asp-for="GlobalDiscountPercentage" class="form-label">Descuento Global (%)</label>
                <input asp-for="GlobalDiscountPercentage" class="form-control" />
                <span asp-validation-for="GlobalDiscountPercentage" class="text-danger"></span>
            </div>

            <!-- ¿Pagada? -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="IsPaid" />
                <label class="form-check-label" asp-for="IsPaid">¿Pagada?</label>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
