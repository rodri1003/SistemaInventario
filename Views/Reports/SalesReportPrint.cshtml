@model SistemaInventario.Models.SalesReportViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reporte de Ventas y Ganancias (Impresión)</title>
    <style>
        /* Estilos para tu PDF */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .encabezado {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .datos-reporte {
            margin-bottom: 15px;
        }
        /* Más estilos a tu gusto */
    </style>
</head>
<body>
    <div class="encabezado">Reporte de Ventas y Ganancias</div>

    <div class="datos-reporte">
        <p><strong>Rango de Fechas:</strong> @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</p>
        <p><strong>Total de Ventas:</strong> $@Model.TotalSales</p>
        <p><strong>Cantidad de Facturas:</strong> @Model.InvoiceCount</p>
        <p><strong>Ganancia Neta:</strong> $@Model.NetProfit</p>
    </div>
</body>
</html>
